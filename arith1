#include "monty.h"

void add_nodes(stack_t **stack, unsigned int line_number)
{
    if (stack == NULL || *stack == NULL || (*stack)->next == NULL)
    {
        handle_error(SHORT_STACK_ERROR);
        return;
    }

    (*stack) = (*stack)->next;
    int result = (*stack)->n + (*stack)->prev->n;
    (*stack)->n = result;
    free((*stack)->prev);
    (*stack)->prev = NULL;
}

void sub_nodes(stack_t **stack, unsigned int line_number)
{
    if (stack == NULL || *stack == NULL || (*stack)->next == NULL)
    {
        handle_error(SHORT_STACK_ERROR);
        return;
    }

    (*stack) = (*stack)->next;
    int result = (*stack)->n - (*stack)->prev->n;
    (*stack)->n = result;
    free((*stack)->prev);
    (*stack)->prev = NULL;
}

void div_nodes(stack_t **stack, unsigned int line_number)
{
    if (stack == NULL || *stack == NULL || (*stack)->next == NULL)
    {
        handle_error(SHORT_STACK_ERROR);
        return;
    }

    if ((*stack)->n == 0)
    {
        handle_error(DIV_ZERO_ERROR);
        return;
    }

    (*stack) = (*stack)->next;
    int result = (*stack)->n / (*stack)->prev->n;
    (*stack)->n = result;
    free((*stack)->prev);
    (*stack)->prev = NULL;
}
